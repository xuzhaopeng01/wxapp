/* pages/newsCenter/myWantbeat/myWantbeat.wxss */
page{
  background-color: rgb(246, 246, 248);
  padding-bottom:20rpx;
}
.myBeatstyle{
  width:100%;
  min-height: 130rpx;
  background-color: #fff;
  padding:20rpx;
  margin-top:20rpx;
}
.follow-col{
  width: calc(100% - 40rpx);
  padding: 10rpx 25rpx 15rpx 25rpx;
  display: flex;
  justify-content: flex-start;
}
.myheadimg{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
}
.name-row{
  width:calc(81% - 40rpx);
  display: inline-block;
  margin-left:40rpx;
  font-size: 32rpx;
  vertical-align: top;
}
.role-row{
  color: rgb(192, 192, 192);
  font-size: 26rpx;
  margin-top:6rpx;
}
.city-row{
  color: rgb(192, 192, 192);
  font-size: 26rpx;
  margin-left:20rpx;
}
.sex-info{
width:30rpx;
height:30rpx;
margin-left:10rpx;
margin-top:8rpx;
}
.because{
  width: calc(100% - 15rpx);
  padding:15rpx 15rpx 15rpx 0;
  font-size: 30rpx;
  letter-spacing: 1rpx;
}
.resource{
  width: calc(100% - 30rpx);
  background-color: rgb(247, 247, 247);
  padding:15rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color:rgb(101, 101, 101);
}
.looked{
  font-size: 28rpx;
  color:rgb(84, 142, 204);
  text-align: right;
}
