/* pages/forum/post/post.wxss */
page{
background-color: rgb(246, 246, 248);
}
.form-first-textarea{
  width:90%;
  height:auto;
  padding-top:20rpx;
  margin-left:30rpx;
}
.beatcontain{
  width:100%;
  margin-top:25rpx;
  min-height: 270rpx;
  background-color: #fff;
}
.placeholder-class{
  font-size: 32rpx;
}
.input-style2{
  width: calc(100% - 30rpx);
  min-height:90rpx;
  line-height: 90rpx;
  margin:10rpx 0 10rpx 0;
  padding-left:30rpx;
  background-color: #fff;
}
.placetyle{
  font-size:32rpx;
  /* color:rgb(191, 191, 191); */
}
.form-first-bottom{
  margin-left:30rpx;
  margin-right:20rpx;
  margin-top:40rpx;
  padding-bottom:40rpx;
  width:clac(100% - 50rpx);
  display:flex;
  flex-wrap:wrap;
}
.add-container{
  width:calc(34% - 18rpx);
  height:200rpx;
  text-align: center;
  line-height: 260rpx;
  padding-top:13rpx;
  padding-right:13rpx;
}
.form-first-bottom>.add-container:nth-of-type(3n){ /* 选择个数是3的倍数的元素 */
  padding-right: 0;
}
.selectclass1{
  width:100%;
  height:100%;
}
.selectclass{
  width:90rpx;
  height:90rpx;
}
.form-column{
  background-color: #fff;
  margin-top:15rpx;
  height:90rpx;
  line-height: 90rpx;
  position: relative;
}
.form-row{
  margin-left:30rpx;
  font-size:32rpx;
}
.form-right{
  float: right;
  font-size: 32rpx;
  margin-right:70rpx;
  color:rgb(193, 193, 193);
}
.col-right{
  width:25rpx;
  height:25rpx;
  position: absolute;
  top:35rpx;
  right:20rpx;
}
.form-button{
  width:calc(100% - 40rpx);
  height:110rpx;
  line-height: 110rpx;
  background-color:  lightskyblue;
  border-radius: 20rpx;
  color:#fff;
  font-size: 40rpx;
  margin-top:40rpx;
}
.citypicker{
  z-index: 1000;
  position:fixed;
  top:0;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: rgba(71, 71, 71, 0.5);
}
.picker-con{
  width:100%;
  height:190px;
  position:fixed;
  bottom: 0px;
  background-color: #fff;
}
.citybody {
  position: absolute;
  bottom:0;
}

.cityheader {
  width: 100%;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #bbb;
}