  position: relative;
}
.form-row{
  display: inline-block;
  margin-left:30rpx;
  font-size:32rpx;
  line-height: 90rpx;
  position: relative;
}
.form-right{
  float: right;
  font-size: 32rpx;
  margin-right:60rpx;
  color:rgb(193, 193, 193);
}
.form-right-img{
  width:60rpx;
  height:60rpx;
  float: right;
  margin-right:60rpx;
  margin-top:14rpx;
}
.form-right1{
  display: inline-block;
  font-size: 32rpx;
  margin-right:60rpx;
  color:rgb(193, 193, 193);
