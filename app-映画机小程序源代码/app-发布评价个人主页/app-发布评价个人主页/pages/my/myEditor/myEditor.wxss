/* pages/my/myEditor/myEditor.wxss */
.form-column{
  background-color: #fff;
  margin-top:5rpx;
  height:90rpx;
  line-height: 90rpx;
  position: relative;
}
.form-row{
  font-family: STKaiti;
  margin-left:30rpx;
  font-size:32rpx;
}
.form-right{
  font-family: STKaiti;
  float: right;
  font-size: 32rpx;
  margin-right:60rpx;
  color:rgb(193, 193, 193);
}
.form-right-img{
  width:60rpx;
  height:60rpx;
  float: right;
  margin-right:60rpx;
  margin-top:14rpx;
}
.form-right1{
font-family: STKaiti;
float:right;
font-size:32rpx;
margin-right:60rpx;
color:rgb(193, 193, 193);
width:75%;
margin-top:20rpx;
text-align: right;
}
.col-right{
  width:25rpx;
  height:25rpx;
  position: absolute;
  top:35rpx;
  right:20rpx;
}
.form-button{
  font-family: STKaiti;
  width:calc(100% - 40rpx);
  height:110rpx;
  line-height: 110rpx;
  background-color:  rgb(254, 131, 141);
  border-radius: 20rpx;
  color:#fff;
  font-size: 40rpx;
  margin-top:40rpx;
}

.map_container{ 
    height: 100%; 
    width: 100%; 
    position: absolute;
    top:0;
    left:0;
    z-index: 1000;
} 
.map { 
    height: 100%; 
    width: 100%; 
}

.citypicker{
  z-index: 1000;
  position:fixed;
  top:0;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: rgba(71, 71, 71, 0.5);
}
.picker-con{
  width:100%;
  height:190px;
  position:fixed;
  bottom: 0px;
  background-color: #fff;
}
.citybody {
  position: absolute;
  bottom:0;
}

.cityheader {
  width: 100%;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: rgb(254, 131, 141);
}