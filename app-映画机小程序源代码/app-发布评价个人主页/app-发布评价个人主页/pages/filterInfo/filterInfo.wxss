/* pages/filterInfo/filterInfo.wxss */
.sort_style{
  width: 100%;
  border-top:1px solid #f4f4f4;
  border-bottom:5px solid rgb(239, 239, 239);
  display: flex;
  height:35px;
  align-content: center;
}
.sort_style_view{
  width: 33.3%;
  padding-top:15rpx;
  text-align: center;
}
.sort_more{
  width:20rpx;
  height: 20rpx;
  margin-left:15rpx;
}
.citypicker{
  z-index: 1000;
  position:fixed;
  top:0;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: rgba(71, 71, 71, 0.5);
}
.picker-con{
  width:100%;
  height:190px;
  position:fixed;
  bottom: 0px;
  background-color: #fff;
}
.citybody {
  position: absolute;
  bottom:0;
}

.cityheader {
  width: 100%;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: rgb(254, 131, 141);
}
/* 模特或摄影师信息列表 */
.filterinfo{
  width: calc(100% - 40rpx);
  margin:0 20rpx;
  padding-top:20rpx;
  display: flex;
  justify-content: space-between;
}
.single-style{
  width:49%;
  display: flex;
  flex-direction: column;
}
.info-de{
 margin-bottom:20rpx;
}
.filter-img{
  width:100%;
  height:340rpx;
}
.filter-title{
  font-size: 30rpx;
  margin-bottom: 7rpx;
}
.info-bottom{
  font-size: 26rpx;
  color: rgb(190, 190, 190);
  display: flex;
  justify-content: space-between;
}
.sex-info{
width:30rpx;
height:30rpx;
margin-left:20rpx;
margin-top:3rpx;
}
